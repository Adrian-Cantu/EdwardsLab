from __future__ import division
PATH = '/Users/jon6/Desktop/outfile3.delta'


def process_data(path):
    with open(path) as input_file:
        for line in input_file:
            chunk = line.strip().split(' ')
            if len(chunk) == 7:#change for blast?
                yield chunk


lengthOfGenomes = 0
x = 0
p = 0
listOfTotal = []
for piece in process_data(PATH):
    p = (float(piece[2])/100)*float(piece[3])
    # = abs(p)
    listOfTotal.insert(x,p)
    lengthOfGenomes = int(piece[13]) - int(piece[12])#out of range?
    x += 1
total = (sum(listOfTotal)/len(listOfTotal))
ANI = (total / lengthOfGenomes)

